{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window and monitor identification overlays",
  "windows": [
    "main",
    "monitor_overlay_*",
    "about"
  ],
  "permissions": [
    "core:default",
    "core:webview:allow-create-webview-window",
    "opener:default",
    "autostart:allow-enable",
    "autostart:allow-disable",
    "autostart:allow-is-enabled",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "/**"
        }
      ]
    },
    "log:default"
  ]
}