{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "WinDisplay",
  "version": "0.3.18",
  "identifier": "com.zpix1.windisplay",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "WinDisplay",
        "width": 350,
        "height": 600,
        "resizable": false,
        "decorations": false,
        "visible": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "nsis",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDc4QTNENEYzQURDQzA4RjUKUldUMUNNeXQ4OVNqZVBwV2ZQY1RmM1U4UmszWENzTXRPUWI4NnB5ejhmemdKdHR4ekZYT2tLdHAK",
      "endpoints": [
        "https://github.com/zpix1/windisplay/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
